<header class="page-header">
  <h1>User Login</h1>
</header>

<div class="row">
  <div class="col-sm-4">
    <%= form_tag '/login' do %>

      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>

      <%= submit_tag "Submit", class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
