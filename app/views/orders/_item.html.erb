<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item.item_price_cents / 100.0 %>
  </td>
  <td>
    <%= item.quantity.to_i %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.total_price_cents / 100.0 %>
  </td>
</tr>
